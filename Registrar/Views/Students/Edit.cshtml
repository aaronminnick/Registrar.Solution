@{
  Layout = "_Layout";
}

@model Registrar.Models.Student;

@using(Html.BeginForm())
{
  @Html.HiddenFor(model => model.StudentId)

  @Html.LabelFor(model => model.FirstName, "First Name:")
  @Html.EditorFor(model => model.FirstName)
  @Html.LabelFor(model => model.LastName, "Last Name:")
  @Html.EditorFor(model => model.LastName)
  @Html.LabelFor(model => model.EnrollmentDate, "Enrollment Date:")
  @Html.TextBoxFor(model => model.EnrollmentDate, "{0:yyyy-MM-dd}", new {@type = "date", @Value = @Model.EnrollmentDate.ToShortDateString()})
  <input type="submit" value="Update Record" />
}

<p>@Html.ActionLink("Return to Student Details", "Details", new { id = Model.StudentId })</p>